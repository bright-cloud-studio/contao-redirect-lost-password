{
    "name":"bright-cloud-studio/contao-redirect-lost-password",
    "description":"Extends the default Contao 'Lost password' front end module to allow forwarding users to a alternative page for setting their new password",
    "homepage": "http://brightcloudstudio.com/",
    "keywords":["contao", "lost", "password", "bright", "cloud", "studio"],
    "type":"contao-module",
    "license":"LGPL-3.0-or-later",
    "authors":[
        {
            "name":"Bright Cloud Studio",
            "homepage":"https://brightcloudstudio.com"
        }
    ],
    "require":{
        "php": "^8.0",
        "contao/core-bundle": "^4.9"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\": [
                "system/modules/contao_redirect_lost_password/library/Bcs"
            ]
        }
    },
    "extra": {
        "contao": {
            "sources": {
                "system/modules/contao_redirect_lost_password": "system/modules/contao_redirect_lost_password"
            }
        }
    },
    "minimum-stability": "dev"
}
